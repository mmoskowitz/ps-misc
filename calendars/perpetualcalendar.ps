	movetocell
	/col col 1 add def
	0 gridside -22 mul rlineto
    } repeat
    stroke
    grestore
    
    resetcell
    0 1 99 {
	/year exch def
	movetocell
	12 stdfont
	year 4 mod 0 eq {
	    year 0 eq {
		gsave
		.75 setgray
		newpath
		0 0 spotrad -135 45 arc
		fill
		0 setgray
		newpath
		0 0 spotrad 0 360 arc
		stroke
		grestore
		year numshow
	    } {
		year numboldshow
	    } ifelse
	} {
	    year numshow
	} ifelse
	year 4 mod 3 eq {
	    nextcell
	} if
	nextcell
    } for
    grestore
} def

